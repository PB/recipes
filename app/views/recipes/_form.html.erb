<%= form_for(@recipe, html: {multipart: true}) do |f| %>
  <%= render 'shared/error', obj: @recipe %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :summary %>
    <%= f.text_area :summary, class: "form-control" %>
  </div>      
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: "form-control", rows: 10 %>
  </div>
  <div class="form-group">
    <strong>Categories</strong>
    <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |category| %>
      <% category.label(class: "checkbox-inline" ) {category.check_box(class: "checkbox") + category.text} %>
    <% end %>
  </div>
  <div class="form-group">
    <%= f.label :picture %>
    <%= f.file_field :picture, accept: 'image/jpeg, image/gif, image/png'  %>
    <p class="help-block">Pick some tasty picture.</p>
  </div>
  <%= link_to "Back", :back, class: "btn btn-default" %>
  <%= f.submit @recipe.new_record? ? 'Create recipe' : 'Edit recipe', class: "btn btn-sucess" %>
<% end %>